<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Main Page</title>
    <%- include('../partials/cdn') %>
</head>
<style>
    textarea {
        resize: none;
    }
    .container {
        position: relative;
        top: 50px;
        height: 400px;
        border-radius: 15px;
        box-shadow: rgba(10, 38, 70, 0.4) 0px 0px 0px 2px, rgba(6, 24, 44, 0.65) 0px 4px 6px -1px, rgba(255, 255, 255, 0.08) 0px 1px 0px inset;
    }
    .subcontainer {
        margin: 0 auto;
        position: relative;
        top: 40px;
        width: 40%;
        height: 350px;
    }
</style>
<body>
  <%- include('../partials/navbar') %>
  <div class="container" id="container">
    <div class="subcontainer">
      <form method="POST" action="/update/<%= pwd.id %>?_method=PUT">
        <div class="mb-3">
          <label for="input-title" class="form-label">Password for:</label>
          <input name="title" type="text" class="form-control" id="input-title" value="<%= pwd.title %>">
        </div>
        <div class="mb-3">
          <label for="input-body" class="form-label">Password:</label>
          <textarea name="body" class="form-control" id="input-body" rows="5"><%= pwd.body %></textarea>
        </div>
        <input class="btn btn-primary submit-btn" type="submit" name="submit" value="Submit">
        <a href="/delete/<%= pwd.id %>" class="btn btn-danger">Delete</a>
      </form>
    </div>
  </div>
</body>
<script>
  const logout = () => {
    document.cookie = "jwt=;expires=Thu, 01 Jan 1970 00:00:01 GMT;";
    document.location.href = "/";
    return false;
  }
</script>
</html>